{
    "files": [
        "src/ts/*.ts",
        "src/ts/*.tsx"
    ],
    "compilerOptions": {
        "noImplicitAny": false,
        "module": "amd",
        "target": "es5",
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "removeComments": true,
        // "allowSyntheticDefaultImports": false,
        "jsx": "react",
        "moduleResolution": "node",
        "allowJs": true,
    }
}